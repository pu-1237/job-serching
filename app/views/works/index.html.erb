<div> 
    <div class="col-md-5 offset-md-4"> 
        <h2 class="text-center pt-5"> Works </h2>
            <% if current_user.admin? %>
                <%= link_to '追加', new_work_path, class: 'btn btn-primary' %> 
            <% end %>
        <table class="table table-hover">
            <thead> 
                <tr>
                    <th>
                        <%= Work.human_attribute_name(:title) %> 
                    </th>
                    <th>
                        <%= Work.human_attribute_name(:work_at) %>
                    </th>
                </tr>
            </thead>
            <tbody> 
                <% @works.each do |work| %>
                    <tr> 
                        <td>
                            <%= link_to work.title, work %>
                        </td>
                        <td>
                            <%= link_to work.work_at, work %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
