<div> 
    <div class="col-md-6 offset-md-3"> 
        <h2 class="text-center pt-5"> 申し込み一覧 </h2> 
        <table class="table table-hover">
            <thead> 
                <tr>
                    <th>
                        <%= Event.human_attribute_name(:title) %> 
                    </th>
                    <th>
                        <%= Event.human_attribute_name(:start) %>
                    </th>
                    <th>
                        <%= User.human_attribute_name(:end) %>
                    </th>
                </tr>
            </thead>
            <tbody> 
                <% @events.each do |event| %>
                        <tr> 
                            <td>
                                <%= link_to event.title, event %>
                            </td>
                            <td>
                                <%= link_to event.start.strftime("%m月%d日 %H:%M"), event %>
                            </td>
                            <td>
                                <%= link_to event.end.strftime("%m月%d日 %H:%M"), event %>
                            </td>
                        </tr>
                    
                <% end %>
            </tbody>
        </table>
        <%= paginate @events %>
    </div>
</div>