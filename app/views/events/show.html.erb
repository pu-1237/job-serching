<% unless current_user.admin %>
    <%if @event.deadline > DateTime.now %>
        <% if @event.applicant_ids.include?(current_user.id) %>
            <% if EventApplicant.find_by(event_id: @event.id, applicant_id: current_user.id).request == false %>
                <%= link_to "申し込みをキャンセルする", cancel_request_event_path(@event.id), data: { confirm: "こちらの案件への申し込みをキャンセルしますか？" } %>
            <% end %>
        <% else %>
            <% #申し込み上限判定 %>
            <% if @event.limit > @event.applicant_ids.size %>
                <%= link_to "申し込む", apply_event_path(@event.id), data: { confirm: "こちらの案件に申し込みますか？" } %>
            <% end %>
        <% end %>
    <% end %>
    <% if @event.start.day == Date.today.day %>
        <% if @event.applicant_ids.include?(current_user.id) %>
            <% if EventApplicant.find_by(event_id: @event.id, applicant_id: current_user.id).attendance == false %>
                <%= link_to '出勤確認', punch_in_event_path%>
            <% end %>
        <% end %>
    <% end %>
<% end %>
<div>
    <div class="col-md-7 offset-md-2"> 
        <h2 class="text-center"> イベント詳細 </h2>
        <div class="nav justify-content-end">
            <% if current_user.admin? %>
                <%= link_to '編集', edit_event_path, class: 'nav-link' %>
                <%= link_to '削除', @event, method: :delete, data: { confirm: "このワークを削除しますか？"}, class: 'nav-link' %> 
            <% end %>
        </div>
        <table class="table table-hover"> 
            <tbody> 
                <tr>
                    <th>
                        <%= @event.title %> 
                    </th>
                </tr>
                <tr>
                    <td>
                        <%= simple_format(h(@event.description), {}, sanitize: false, wrapper_tag: "div") %> 
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<% if current_user.admin? %>
    <div>
        <div class="col-md-7 offset-md-2"> 
            <h2 class="text-center"> 申し込み者一覧 </h2>
                    <table class="table table-hover">
                <thead> 
                    <tr>
                        <th>
                            <%= User.human_attribute_name(:name) %> 
                        </th>
                        <th>
                            <%= User.human_attribute_name(:email) %>
                        </th>
                        <th>
                            キャンセルリクエスト
                        </th>
                        <th>
                            キャンセル処理
                        </th>
                        <th>
                            出勤確認
                        </th>
                        <th>
                            勤怠管理
                        </th>
                    </tr>
                </thead>
                <tbody> 
                    <% @applicants.each do |applicant| %>
                        <tr> 
                            <td>
                                <%= link_to applicant.name, [:admin, applicant] %>
                            </td>
                            <td>
                                <%= applicant.email %>
                            </td>
                            <td>
                                <% if EventApplicant.find_by(event_id: @event.id, applicant_id: applicant.id).request %>
                                    ○
                                <% else %>
                                    -
                                <% end %>
                            </td>
                            <td>
                                <% #link_toにcancelメソッドで受け取るパラメータを付与する%>
                                <%= link_to "申し込みをキャンセルする", cancel_event_path(applicant_id: applicant.id ), data: { confirm: "こちらの案件への申し込みをキャンセルしますか？" } %>
                            </td>
                            <td>
                                <% if EventApplicant.find_by(event_id: @event.id, applicant_id: applicant.id).attendance %>
                                    ○
                                <% else %>
                                    -
                                <% end %>
                            </td>
                            <td>
                                <input type="text" name="name" size="40">
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @applicants %>
        </div>
    </div>
<% end %>
