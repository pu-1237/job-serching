<% unless current_user.admin %>
    <% if @event.applicant_ids.include?(current_user.id) %>
        <%= link_to "申し込みをキャンセルする", cancel_event_path(@event.id), data: { confirm: "こちらの案件への申し込みをキャンセルしますか？" } %>
    <% else %>
        <% #申し込み上限判定 %>
        <% if @event.limit > @event.applicant_ids.size %>
            <%= link_to "申し込む", apply_event_path(@event.id), data: { confirm: "こちらの案件に申し込みますか？" } %>
        <% end %>
    <% end %>
<% end %>
<div>
    <div class="col-md-4 offset-md-4"> 
        <h2 class="text-center pt-5"> イベント詳細 </h2>
        <div class="nav justify-content-end">
            <%= link_to 'ワーク一覧', events_path, class: 'nav-link' %>
            <% if current_user.admin? %>
                <%= link_to '編集', edit_event_path, class: 'nav-link' %>
                <%= link_to '削除', @event, method: :delete, data: { confirm: "このワークを削除しますか？"}, class: 'nav-link' %> 
            <% end %>
        </div>
        <table class="table table-hover"> 
            <tbody> 
                <tr>
                    <th>
                        <%= @event.title %> 
                    </th>
                </tr>
                <tr>
                    <td>
                        <%= simple_format(h(@event.description), {}, sanitize: false, wrapper_tag: "div") %> 
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<% if current_user.admin? %>
    <div>
        <div class="col-md-4 offset-md-4"> 
            <h2 class="text-center pt-5"> 申し込み者一覧 </h2>
                    <table class="table table-hover">
                <thead> 
                    <tr>
                        <th>
                            <%= User.human_attribute_name(:name) %> 
                        </th>
                        <th>
                            <%= User.human_attribute_name(:email) %>
                        </th>
                        <th>
                            キャンセルリクエスト
                        </th>
                        <th>
                            キャンセル処理
                        </th>
                    </tr>
                </thead>
                <tbody> 
                    <% @applicants.each do |applicant| %>
                        <tr> 
                            <td>
                                <%= link_to applicant.name, [:admin, applicant] %>
                            </td>
                            <td>
                                <%= applicant.email %>
                            </td>
                            <td>
                                ◯
                            </td>
                            <td>
                                <% #link_toにcancelメソッドで受け取るパラメータを付与する%>
                                <%= link_to "申し込みをキャンセルする", cancel_event_path(applicant_id: applicant.id ), data: { confirm: "こちらの案件への申し込みをキャンセルしますか？" } %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @applicants %>
        </div>
    </div>
<% end %>
