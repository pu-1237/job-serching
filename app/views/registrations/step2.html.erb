

<div>
    <div class="col-md-6 offset-md-3">
        <h2 class="text-center pt-5"> WEB登録フォーム</h2>
        <hr width="100%" >
            <p id="step">STEP1 応募情報登録 ></p><h5 id="step">STEP2 入力内容確認 </h5> >STEP3 完了

        <h2 class="text-left pt-5"> 入力内容を確認してください </h2>
        <%= form_for @user, url: registration_path do |f| %>
        <table class="table table-bordered" id="form_table">
            <tr>
                <td>
                    姓名(漢字)
                </td>
                <td>
                    <%= @user.full_name %>
                    <%= f.hidden_field :last_name %>
                    <%= f.hidden_field :first_name %>
                </td>
            </tr>
            <tr>
                <td>
                    姓名(カナ)
                </td>
                <td>
                    <%= @user.full_name_kana %>
                    <%= f.hidden_field :last_name_kana, class: 'form-control', placeholder: 'セイ(全角カナ)' %>
                    <%= f.hidden_field :first_name_kana, class: 'form-control', placeholder: 'メイ(全角カナ)' %>
                </td>
            </tr>
            <tr>
                <td>
                    性別
                </td>
                <td>
                    <%= @user.gender == 'male' ? '男' : '女'%>
                    <%= f.hidden_field :gender %>
                </td>
            </tr>
            <tr>
                <td>
                    生年月日
                </td>
                <td>
                    <%= @user.birthday %>
                    <%= f.hidden_field :birthday %>
                </td>
            </tr>
            <tr>
                <td>
                    メールアドレス
                </td>
                <td>
                    <%= @user.email %>
                    <%= f.hidden_field :email %>
                </td>
            </tr>
            <tr>
                <td>
                    電話番号
                </td>
                <td>
                    <%= @user.number%>
                    <%= f.hidden_field :number, class: 'form-control' %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label :postcode, '郵便番号' %>
                </td>
                <td>
                    <%= @user.postcode %>
                    <%= f.hidden_field :postcode %>
                </td>
            </tr>
            <tr>
                <td>
                    都道府県
                </td>
                <td>
                    <%= @user.prefecture_name %>
                    <%= f.hidden_field :prefecture_code %>
                </td>
            </tr>
            <tr>
                <td>
                    市区町村
                </td>
                <td>
                    <%= @user.address_city %>
                    <%= f.hidden_field :address_city %>
                </td>
            </tr>
            <tr>
                <td>
                    番地・建物
                </td>
                <td>
                    <%= @user.address_street %>
                    <%= f.hidden_field :address_street %>
                </td>
            </tr>
            <tr>
                <td>
                    最寄駅
                </td>
                <td>
                    <%= @user.station %>
                    <%= f.hidden_field :station %>
                </td>
            </tr>
            <tr>
                <td>
                    パスワード
                </td>
                <td>
                    <%= '******' %>
                    <%= f.hidden_field :password %>
                </td>
            </tr>
        </table>
        <%= f.submit '＜ 戻る', name: 'back', class: 'btn btn-secondary btn-lg'%>
        <div class="text-right" style="margin-top: -50px;">
        <%= f.submit '進む ＞', class: 'btn btn-secondary btn-lg'%>
        </div>
        <% end %>
    </div>
</div>