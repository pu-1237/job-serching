<%= form_with model:[:admin, user], local: true do |f| %>
<table id="form_table">
    <tr>
        <td>
            <%= f.label :new_profile_picture %>
        </td>
        <td>
            <%= f.file_field :new_profile_picture, class: 'file-form' %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label "姓名(漢字)"%>
        </td>
        <td>
            <div style="display:inline-flex">
                <%= f.text_field :last_name, class: 'form-control form-inline', placeholder: '姓(漢字)'%>
                <%= f.text_field :first_name, class: 'form-control', placeholder: '名(漢字)' %>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label "姓名(カナ)" %>
        </td>
        <td>
            <div style="display:inline-flex">
                <%= f.text_field :last_name_kana, class: 'form-control', placeholder: 'セイ(全角カナ)' %>
                <%= f.text_field :first_name_kana, class: 'form-control', placeholder: 'メイ(全角カナ)' %>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label "性別" %>
        </td>
        <td>
            <%= f.radio_button :gender, :male %>
            <%= f.label :gender, "男",class: 'form-con', id:"gender_checkbox" %>
            <%= f.radio_button :gender, :female %>
            <%= f.label :gender, "女",class: 'form-con', id:"gender_checkbox" %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label "生年月日" %>
        </td>
        <td>
            <%= f.date_select :birthday, {use_month_numbers: true,start_year: 1950}, {class: "form-control bootstrap-date"} %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :email, id: 'label_email'%>
        </td>
        <td>
        <%= f.text_field :email, class: 'form-control' %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :number %>
        </td>
        <td>
            <%= f.text_field :number, class: 'form-control' %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :postcode, '郵便番号' %>
        </td>
        <td>
            <%= f.text_field :postcode , class: 'form-control', id: "user_postcode" %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :prefecture_code, '都道府県' %>
        </td>
        <td>
            <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control', id: 'user_prefecture_code' %>
        <td>
    </tr>
    <tr>
        <td>
            <%= f.label :address_city, '市区町村' %>
        </td>
        <td>
            <%= f.text_field :address_city, autocomplete: 'address_city', class: 'form-control', id: "user_address_city" %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :address_street, '番地' %>
        </td>
        <td>
            <%= f.text_field :address_street, autocomplete: 'address_street', class: 'form-control', id: "user_address_street" %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :address_building, '建物' %>
        </td>
        <td>
            <%= f.text_field :address_building, autocomplete: 'address_building', class: 'form-control' %>
        </td>
    </tr>
        <td>
            <%= f.label :station %>
        </td>
        <td>
            <%= f.text_field :station, class: 'form-control' %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :password %>
        </td>
        <td>
            <%= f.password_field :password, class: 'form-control' %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :password_confirmation %>
        </td>
        <td>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :admin, '管理者権限', class: 'form-check-label' %>
        </td>
        <td>
            <%= f.check_box :admin ,class: 'form-check-input' %><br>
        </td>
    </tr>
</table>
<%= f.submit nil, class: 'btn btn-primary'%>
<% end %>

