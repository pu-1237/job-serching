<div>
    <div class="col-md-4 offset-md-4">
        <h2 class="text-center pt-5"> ユーザー詳細 </h2>
            <div class="nav justify-content-end"> 
                <%= link_to '編集', edit_admin_user_path(@user), class: 'nav-link' %>
                <%= link_to '削除', admin_user_path(@user), method: :delete, data: {confirm: "ユーザー「#{@user.full_name}」を削除してよろしいですか？"}, class: 'nav-link' %>
            </div>
                <table class= "table table-hover">
                    <tbody>
                        <tr>
                            <th>プロフィール画像</th>
                            <td><% if @user.profile_picture.attached? %>
                                    <%= image_tag @user.profile_picture.variant(resize_to_fill: [128, 128]) %>
                                <% end %>
                            </td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:id) %> </th>
                            <td><%= @user.id %></td>
                        </tr>
                        <tr>
                            <th><%= '姓名(漢字)' %> </th>
                            <td><%= @user.full_name %></td>
                        </tr>
                        <tr>
                            <th><%= '姓名(カナ)' %> </th>
                            <td><%= @user.full_name_kana %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:email) %></th>
                            <td><%= @user.email %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:number) %></th>
                            <td><%= @user.number %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:postal_code) %></th>
                            <td><%= @user.postal_code %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:address) %></th>
                            <td><%= @user.address %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:station) %></th>
                            <td><%= @user.station %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:admin) %></th>
                            <td><%= @user.admin? ? '〇' : '－' %></td>
                        </tr>
                    </tbody>
                </table>
    </div>
</div>
