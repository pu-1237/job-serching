
<div class="col-md-6 offset-md-3"> 
    <h2>お知らせ</h2>
    <hr width="100%">
    <div class="nav justify-content-end">
        <% if current_user&.admin? %>
            <%= link_to '編集', edit_news_path, class: 'btn btn-primary' %>
            <%= link_to '削除', @news, method: :delete, data: { confirm: "このニュースを削除しますか？"}, class: 'btn btn-danger' %> 
        <% end %>
    </div>
    <table class="table table-hover"> 
        <tbody> 
            <tr>
                <td><%= @news.title %></td>
            </tr>
            <tr>
                <td>
                    <%= @news.created_at.strftime('%Y/%m/%d')%></td>
                </td>
            </tr>
            <tr>
                <td>
                    <%= simple_format(@news.text) %> 
                </td>
            </tr>
        </tbody>
    </table>
</div>
