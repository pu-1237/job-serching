
<div class="col-md-8 offset-md-2"> 
    <h2>お知らせ</h2>
    <hr width="100%">
    <div class="nav justify-content-end">
        <% if current_user&.admin? %>
            <%= link_to '編集', edit_news_path, class: 'btn btn-primary' %>
            <%= link_to '削除', @news, method: :delete, data: { confirm: "このニュースを削除しますか？"}, class: 'btn btn-danger' %> 
        <% end %>
    </div>
    <h5 id='news'><%= @news.title %></h5>
    <table class="table table-hover" id='news'> 
        <tbody> 
            <tr>
                <td id='news'>
                    <%= @news.created_at.strftime('%Y/%m/%d')%></td>
                </td>
                <td id='news'>
                    <%= simple_format(@news.text) %> 
                </td>
            </tr>
        </tbody>
    </table>
</div>
