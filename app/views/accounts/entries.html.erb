<div> 
    <div class="col-md-6 offset-md-3"> 
            <div class="text-center">
                <h3><%= @month.strftime("%Y年%m月") %></h3>
            </div>
        <div class="btn-toolbar">
            <div class="btn-group">
                <%= link_to "＜", entries_accounts_path(month:@month.prev_month), class:"btn btn-secondary"%>
            </div>
            <div class="btn-group ml-auto">
                <%= link_to "＞", entries_accounts_path(month:@month.next_month), class:"btn btn-secondary"%>
            </div>
        </div>
        <table class="table table-bordered table-hover">
            <thead> 
                <tr>
                    <th>
                        <%= "案件名" %> 
                    </th>
                    <th>
                        <%= "作業日" %>
                    </th>
                    <th>
                        <%= "作業時間" %>
                    </th>
                </tr>
            </thead>
            <tbody> 
                <% @events.each do |event| %>
                    <tr> 
                        <td>
                            <%= link_to event.title, event %>
                        </td>
                        <td>
                            <%= event.start.strftime("%Y-%m-%d") %>
                        </td>
                        <td>
                            <%= "#{event.start.strftime("%H:%M")}-#{event.end.strftime("%H:%M")}" %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%= paginate @events %>
    </div>
</div>