<div>
    <div class="col-md-6 offset-md-3">
        <p><td><%= link_to "写真を追加する", [@user, :images], class: 'btn btn-primary' %></td></p>
        <%= render partial: 'layouts/error_messages', locals: { t: @user } %>
            <table class= "table table-hover table-bordered">
                <tbody>
                    <tr>
                        <th><%= User.human_attribute_name(:id) %> </th>
                        <td><%= @user.id %></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>プロフィール画像</th>
                        <td><% if @user.profile_picture.attached? %>
                                <%= image_tag @user.profile_picture.variant(resize_to_fill: [128, 128]) %>
                            <% end %>
                        </td>
                    </tr>
                    <tr>
                        <th><%= '姓名(漢字)' %> </th>
                        <td><%= @user.full_name %></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th><%= '姓名(カナ)' %> </th>
                        <td><%= @user.full_name_kana %></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th><%= '性別' %> </th>
                        <td><%= @user.gender = :male ? '男' : '女' %></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th><%= '生年月日' %> </th>
                        <td><%= @user.birthday&.strftime("%Y年%m月%d日") %></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th><%= User.human_attribute_name(:email) %></th>
                        <td><%= @user.email %></td>
                        <td><%= link_to '編集', edit_account_path(id: @user.id, edit: 'email'), class: 'btn btn-outline-primary' %></td>
                    </tr>
                    <tr>
                        <th><%= User.human_attribute_name(:number) %></th>
                        <td><%= @user.number %></td>
                        <td><%= link_to '編集', edit_account_path(id: @user.id, edit: 'number'), class: 'btn btn-outline-primary' %></td>
                    </tr>
                    <tr>
                        <th><%= User.human_attribute_name(:postcode) %></th>
                        <td><%= @user.postcode %></td>
                        <td><%= link_to '編集', edit_account_path(id: @user.id, edit: 'postcode'), class: 'btn btn-outline-primary' %></td>
                    </tr>
                    <tr>
                        <th><%= User.human_attribute_name(:address) %></th>
                        <td><%= @user.address %></td>
                        <td><%= link_to '編集', edit_account_path(id: @user.id, edit: 'address'), class: 'btn btn-outline-primary' %></td>
                    </tr>
                    <tr>
                        <th><%= User.human_attribute_name(:station) %></th>
                        <td><%= @user.station %></td>
                        <td><%= link_to '編集', edit_account_path(id: @user.id, edit: 'station'), class: 'btn btn-outline-primary' %></td>
                    </tr>
                    <tr>
                        <th><%= User.human_attribute_name(:password) %></th>
                        <td><%= "******" %></td>
                        <td><%= link_to '編集', edit_account_path(id: @user.id, edit: 'password'), class: 'btn btn-outline-primary' %></td>
                    </tr>
                </tbody>
            </table>
    </div>
</div>
