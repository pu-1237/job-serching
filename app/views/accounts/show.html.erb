<div>
    <div class="col-md-4 offset-md-4">
        <h2 class="text-center pt-5"> マイアカウント </h2>
            <div class="nav justify-content-end"> 
                
            </div>
                <table class= "table table-hover">
                    <tbody>
                        <tr>
                            <th>プロフィール画像</th>
                            <td><% if @user.profile_picture.attached? %>
                                    <%= image_tag @user.profile_picture.variant(resize_to_fill: [128, 128]) %>
                                <% end %>
                            </td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:id) %> </th>
                            <td><%= @user.id %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:name) %> </th>
                            <td><%= @user.name %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:email) %></th>
                            <td><%= @user.email %></td>
                            <td><%= link_to '編集', edit_account_path(edit: 'email'), class: 'nav-link' %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:number) %></th>
                            <td><%= @user.number %></td>
                            <td><%= link_to '編集', edit_account_path(edit: 'number'), class: 'nav-link' %></td>
                        </tr>
                        <tr>
                            <th><%= User.human_attribute_name(:password) %></th>
                            <td></td>
                            <td><%= link_to '編集', edit_account_path(edit: 'password'), class: 'nav-link' %></td>
                        </tr>
                    </tbody>
                </table>
    </div>
</div>
