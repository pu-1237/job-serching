<div>
    <div class="col-md-4 offset-md-4">
        <% if params[:edit] == 'picture' %>
            <h3 class="text-center pt-5"> プロフィール画像を変更 </h2>
            <%= form_with model: @user, url: account_path, local: true do |f| %>
                <%= f.file_field :new_profile_picture, class: 'file-form' %>
                <div class="text-right">
                    <%= f.submit nil, class: 'btn btn-primary rounded-pill btn-lg'%>
                </div>
            <% end %>
        </tr>

        <% elsif params[:edit] == 'email' %>
            <h3 class="text-center pt-5"> Eメールアドレスを変更 </h2>

            <%= form_with model: @user, url: account_path, local: true do |f| %>
                <%= f.text_field :email, class: 'form-control account-edit', placeholder: '新しいメールアドレス' %>
                    <div class="text-right">
                        <%= f.submit nil, class: 'btn btn-primary rounded-pill btn-lg'%>
                    </div>
            <% end %>
        <% elsif params[:edit] == 'number' %>
            <h3 class="text-center pt-5"> 電話番号を変更 </h2>
            <%= form_with model: @user, url: account_path, local: true do |f| %>
                <%= f.text_field :number, class: 'form-control account-edit', placeholder: '新しい電話番号' %>
                <div class="text-right">
                <%= f.submit nil, class: 'btn btn-primary rounded-pill btn-lg'%>
                </div>
            <% end %>
        <% elsif params[:edit] == 'password' %>
            <h3 class="text-center pt-5"> パスワードを変更 </h2>
        <%= form_with model:@user, url:account_path, local: true do |f| %>
            <%= f.password_field :password, class: 'form-control account-edit', placeholder: '新しいパスワード'%>
            <%= f.password_field :password_confirmation, class: 'form-control account-edit', placeholder: 'パスワードを確認' %>
            <div class="text-right">
            <%= f.submit nil, class: 'btn btn-primary rounded-pill btn-lg'%>
            </div>
        <% end %>
        <% elsif params[:edit] == 'postcode' %>
            <h3 class="text-center pt-5"> 郵便番号を変更する </h2>

            <%= form_with model: @user, url: account_path, local: true do |f| %>
                <%= f.text_field :postcode, class: 'form-control account-edit' , placeholder: '新しい郵便番号'%>
                <div class="text-right">
                <%= f.submit nil, class: 'btn btn-primary rounded-pill btn-lg'%>
                </div>
            <% end %>
        <% elsif params[:edit] == 'address' %>
            <h3 class="text-center pt-5"> 住所を変更 </h2>
            <%= form_with model: @user, url: account_path, local: true do |f| %>
            <table>
            <tr>
                <td><%= f.label :prefecture_code, '都道府県' %></td>
                <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control account-edit', id: 'user_prefecture_code' %></td>
            </tr>
            <tr>
                <td><%= f.label :address_city, '市区町村' %></td>
                <td><%= f.text_field :address_city, autocomplete: 'address_city', class: 'form-control account-edit', id: "user_address_city" %></td>
            </tr>
            <tr>
                <td><%= f.label :address_street, '番地・建物' %></td>
                <td><%= f.text_field :address_street, autocomplete: 'address_street', class: 'form-control account-edit', id: "user_address_street" %></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <div class="text-right">
                        <%= f.submit nil, class: 'btn btn-primary rounded-pill btn-lg'%>
                    </div>
                </td>
            </tr>
            </table>
            <% end %>
        <% elsif params[:edit] == 'station' %>
            <h3 class="text-center pt-5"> 最寄駅を変更 </h2>

            <%= form_with model: @user, url: account_path, local: true do |f| %>
                <%= f.text_field :station, class: 'form-control account-edit' , placeholder: '新しい最寄駅'%>
                <div class="text-right">
                <%= f.submit nil, class: 'btn btn-primary rounded-pill btn-lg'%>
                </div>
            <% end %>
        <% end %>
    </div>
</div>